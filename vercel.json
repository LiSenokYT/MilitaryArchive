{
  "functions": {
    "api/**/*.js": {
      "runtime": "edge"
    }
  },
  "rewrites": [
    { 
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    { 
      "source": "/(.*)",
      "destination": "/index.html",
      "has": [
        {
          "type": "header",
          "key": "accept",
          "value": "text/html"
        }
      ]
    }
  ]
}
